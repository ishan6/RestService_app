<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0E8E8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="10dp"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/pizza"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/pizza"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pizza"
                    android:layout_below="@+id/pizza"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/mainsides"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/sides"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Main Sides"
                    android:layout_below="@+id/mainsides"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/linear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/sides"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/other2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Other"
                    android:layout_below="@+id/sides"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/beverages"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/beverage"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Beverages"
                    android:layout_below="@+id/beverages"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/desert"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/lava2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Dessert"
                    android:layout_below="@+id/desert"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:src="@drawable/untitled1"
                android:alpha="1"/>

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:src="@drawable/untitled2"
                android:alpha="1"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearlast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/linear3image1"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:src="@drawable/pizza3"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:paddingTop="2dp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/linear3image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="Seafood Hawaiian"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card7"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/linear3image2"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:src="@drawable/pizza5"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:paddingTop="2dp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/linear3image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="Devilled Mutton"/>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card8"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/linear3image3"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:src="@drawable/pizza6"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:paddingTop="2dp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/linear3image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="Mighty Meaty"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card9"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/linear3image4"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:src="@drawable/pizza7"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:paddingTop="2dp"
                            android:layout_margin="3dp"
                            android:layout_below="@+id/linear3image4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:text="Prawn Lovers"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="20dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/cart"
                android:layout_margin="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_shopping_cart"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>